[flake8]
# Maximum line length
max-line-length = 88

# List of error codes to ignore
ignore = E203,W503,E501,F401,W291,W293

# Directories to exclude from linting
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info

# Files to exclude
per-file-ignores = 
    __init__.py:F401

# Maximum complexity
max-complexity = 15

# Docstring conventions
docstring-convention = google
